<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@drawable/table_host"
            android:gravity="left"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/home"
                style="@style/mainTabs_radio"
                android:button="@null"
                android:drawableTop="@drawable/my_country_btn"
                android:text="首页"
                android:textColor="@drawable/tabhost_text_color" />
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/greenfood"
                style="@style/mainTabs_radio"
                android:button="@null"
                android:drawableTop="@drawable/greenfood_btn"
                android:text="绿色食品"
                android:textColor="@drawable/tabhost_text_color" />
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/town_tour"
                style="@style/mainTabs_radio"
                android:button="@null"
                android:drawableTop="@drawable/town_tour_btn"
                android:text="农家乐"
                android:textColor="@drawable/tabhost_text_color" />
            
             <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/business"
                style="@style/mainTabs_radio"
                android:button="@null"
                android:drawableTop="@drawable/business_btn"
                android:text="农贸市场"
                android:textColor="@drawable/tabhost_text_color" />
            
            
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/my_country"
                style="@style/mainTabs_radio"
                android:button="@null"
                android:drawableTop="@drawable/mycountry_btn"
                android:text="我的村"
                android:textColor="@drawable/tabhost_text_color" />
   
        </RadioGroup>
    </LinearLayout>

</TabHost>