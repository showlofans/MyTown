<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/pic"
        android:ellipsize="end"
        android:lines="2"
        android:paddingTop="5dp"
        android:text="title"
        android:textColor="#141414"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_rmb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/pic"
        android:background="@drawable/rmb"
        android:baselineAlignBottom="true" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_rmb"
        android:layout_alignBottom="@id/iv_rmb"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_rmb"
        android:text="价钱"
        android:textColor="#f15353"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/sales1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/sale"
        android:layout_toLeftOf="@+id/sales"
        android:text="已售："
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/price"
        android:layout_alignBottom="@id/price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="销量"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pic"
        android:layout_alignLeft="@+id/iv_rmb"
        android:text="地址"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="距离"
        android:paddingRight="5dp" 
        android:textColor="#999999"
        android:textSize="15sp" />

</RelativeLayout>